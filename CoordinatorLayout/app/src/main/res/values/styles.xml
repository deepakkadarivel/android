<resources>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/actionbar_icons</item>
        <!-- Used to for the menu title size of the Toolbar -->
        <!--<item name="android:textSize">8sp</item>-->
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">@color/actionbar_icons</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">@color/actionbar_icons</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">@color/white</item>
    </style>

</resources>
